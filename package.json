{
  "name": "planner-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "scripts": {
    "dev": "concurrently -n shared,ui,api,web -c magenta,cyan,green,blue \"npm run dev -w @planner/shared\" \"npm run dev -w @planner/ui\" \"npm run dev -w @planner/api\" \"npm run dev -w @planner/web\"",
    "dev:api": "npm run dev -w @planner/api",
    "dev:web": "npm run dev -w @planner/web",
    "lint": "npm run lint -ws",
    "test": "npm run test -ws",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "npm run prisma:reset -w @planner/api",
    "prisma:generate": "npm run prisma:generate -w @planner/api",
    "prisma:migrate": "npm run prisma:migrate -w @planner/api",
    "seed": "npm run seed -w @planner/api"
  }
}

